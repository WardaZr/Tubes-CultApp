<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/reg_bg1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@id/reg_bg1"
        android:layout_centerHorizontal="true"
        android:text="Cult-App"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/poppinsbold"
        android:textSize="35dp"
        android:textColor="@color/white"
        android:id="@+id/reg_txt_1"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img1"
        android:layout_below="@id/reg_txt_1"
        android:layout_centerHorizontal="true"
        android:id="@+id/reg_img1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_img1"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/reg_txt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:text="Email"
            android:textSize="15dp"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/log_email"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:background="@drawable/button_edit"
            android:fontFamily="@font/poppinsmedium"
            android:hint="masukan email Anda"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:textColor="#CDCDCD"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/reg_txt_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_txt_3"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Password"
            android:textSize="12dp"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/log_password"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:background="@drawable/button_edit"
            android:fontFamily="@font/poppinsmedium"
            android:hint="masukan password Anda"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:textColor="#CDCDCD"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/primaryColor"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="Login"
            android:textAllCaps="false"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/reg_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_txt_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:textSize="12dp"
                android:text="Belum punya akun? "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/link_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:text="Register"
                android:textSize="12dp"
                android:textColor="@color/primaryColor"
                />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>